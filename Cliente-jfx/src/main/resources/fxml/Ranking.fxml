<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.paint.ImagePattern?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Cliente.Controladores.RankingController"
            prefWidth="600" prefHeight="700"
            style="-fx-background-color: #d6eaf8;">

    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" left="30" right="30" bottom="30" />
            </padding>

            <!-- TÍTULO -->
            <Label text="RANKING DE JUGADORES"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- JUGADOR 1 (más destacado) -->
            <HBox spacing="20" alignment="CENTER_LEFT"
                  style="-fx-background-color: rgb(61,131,173); -fx-background-radius: 10; -fx-padding: 20;">
                <Circle radius="45" stroke="BLACK" strokeType="INSIDE" fx:id="imagenJ1">
                    <fill>
                        <ImagePattern>
                            <image>
                                <Image  url="@/images/fotoPerfilGenerica.png" />
                            </image>
                        </ImagePattern>
                    </fill>
                </Circle>
                <Label text="-----" style="-fx-text-fill: white; -fx-font-size: 22px;" fx:id="nombreJ1" />
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="-----" style="-fx-text-fill: white; -fx-font-size: 22px;" fx:id="puntosJ1" />
            </HBox>

            <!-- Jugadores 2 a 5 -->
            <VBox spacing="12">
                <!-- Cada línea usa tamaño más pequeño -->
                <HBox spacing="20" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
                    <Circle radius="30" stroke="BLACK" strokeType="INSIDE" fx:id="imagenJ2">
                        <fill>
                            <ImagePattern>
                                <image>
                                    <Image  url="@/images/fotoPerfilGenerica.png" />
                                </image>
                            </ImagePattern>
                        </fill>
                    </Circle>
                    <Label text="-----" style="-fx-font-size: 16px;" fx:id="nombreJ2"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="-----" style="-fx-font-size: 16px;" fx:id="puntosJ2" />
                </HBox>

                <HBox spacing="20" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
                    <Circle radius="30" stroke="BLACK" strokeType="INSIDE" fx:id="imagenJ3">
                        <fill>
                            <ImagePattern>
                                <image>
                                    <Image  url="@/images/fotoPerfilGenerica.png" />
                                </image>
                            </ImagePattern>
                        </fill>
                    </Circle>
                    <Label text="-----" style="-fx-font-size: 16px;" fx:id="nombreJ3"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="-----" style="-fx-font-size: 16px;" fx:id="puntosJ3"/>
                </HBox>

                <HBox spacing="20" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
                    <Circle radius="30" stroke="BLACK" strokeType="INSIDE" fx:id="imagenJ4">
                        <fill>
                            <ImagePattern>
                                <image>
                                    <Image  url="@/images/fotoPerfilGenerica.png" />
                                </image>
                            </ImagePattern>
                        </fill>
                    </Circle>
                    <Label text="-----" style="-fx-font-size: 16px;" fx:id="nombreJ4"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="-----" style="-fx-font-size: 16px;" fx:id="puntosJ4"/>
                </HBox>

                <HBox spacing="20" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
                    <Circle radius="30" stroke="BLACK" strokeType="INSIDE" fx:id="imagenJ5">
                        <fill>
                            <ImagePattern>
                                <image>
                                    <Image  url="@/images/fotoPerfilGenerica.png" />
                                </image>
                            </ImagePattern>
                        </fill>
                    </Circle>
                    <Label text="-----" style="-fx-font-size: 16px;" fx:id="nombreJ5" />
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="-----" style="-fx-font-size: 16px;" fx:id="puntosJ5"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- PIE -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="10" right="20" bottom="10" left="10" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
